<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
			<h3 class="ribbon4">全ての生産者</h3><br>
			<div>
				<img src='https://images.pexels.com/photos/532400/pexels-photo-532400.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940' width=350 />
			</div><br>
			<div>
				<img src='' width=350 />
			</div><br>
			<div>
				<img src='' width=350 />
			</div>
		</div>
        <div class="col-md-9">
        	<div class="clearfix">
				<% @producers.each do |producer| %>
					<div class="contents-item">
						<%= link_to producer_path(producer) do %>
						<%= attachment_image_tag producer, :producer_image, size: "200x150", format: 'jpeg' ,fallback: "no_image.jpg"%>
						<% end %>
						<p><%= link_to producer.producer_name, producer_path(producer.id), :class=>"button"  %></p>
						<div class="user"><%= producer.a_address %></div>
						<% if user_signed_in? %>
							<% if producer.followed_by?(current_user) %>
								<p><span></span><%=link_to "フォロー中", producer_follows_path(producer.id), method: :delete, :class=>"button"  %></p>
							<% else %>
								<p><span></span><%=link_to "フォローする", producer_follows_path(producer.id), method: :post, :class=>"button"  %></p>
								<% end %>
							<% else %>
								<div class="user"><p><span>フォロー数: </span><%= producer.follows.count %></p></div>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

